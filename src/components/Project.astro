---
import IconCode from '../assets/code.svg'
import IconExternalLink from '../assets/external-link.svg'
import Link from './Link.astro'

const { name, url } = Astro.props
const id = name.toLowerCase().replaceAll(' ', '-')
---

<article>
  <img src={`/images/${id}.webp`} alt="" width="512" height="320" />
  <div>
    <header>
      <h3>{name}</h3>
      <Link url={`github.com/jhanca-vm/${id}`} label="CÃ³digo fuente">
        <IconCode />
      </Link>
      <Link url={url} label="Sitio web">
        <IconExternalLink />
      </Link>
    </header>
    <p>
      <slot />
    </p>
  </div>
</article>

<style>
  article {
    display: grid;
    gap: 16px;
    @media (width >= 1280px) {
      align-items: center;
      gap: 32px;
      grid-template-columns: 1fr 1fr;
    }
  }

  img {
    border-radius: 8px;
    width: 100%;
  }

  header {
    align-items: center;
    display: flex;
    gap: 16px;
  }

  h3 {
    color: var(--primary-color);
    flex-grow: 1;
    font-weight: 600;
    @media (width >= 540px) {
      font-size: 20px;
    }
  }

  svg {
    height: 18px;
  }

  p {
    font-weight: 400;
    line-height: 24px;
    margin-top: 12px;
    text-wrap: pretty;
  }
</style>
