---
import IconCode from '../assets/code.svg'
import IconExternalLink from '../assets/external-link.svg'
import Link from './Link.astro'

const list = [
  ['En La Mano', '98.80.199.169.nip.io'],
  ['Tech book club', 'techbookclub.pages.dev'],
  ['Omanxus', 'omanxus.pages.dev']
]
---

<section>
  <h2>Proyectos destacados</h2>
  <div>
    {
      list.map(([name, url]) => {
        const id = name.toLowerCase().replaceAll(' ', '-')

        return (
          <article>
            <img src={`/images/${id}.webp`} alt="" width="512" height="320" />
            <div>
              <h3>{name}</h3>
              <Link url={`github.com/jhanca-vm/${id}`} label="CÃ³digo fuente">
                <IconCode />
              </Link>
              <Link url={url} label="Sitio web">
                <IconExternalLink />
              </Link>
            </div>
          </article>
        )
      })
    }
  </div>
</section>

<style>
  section {
    background-image: url('/images/shape.svg');
    background-position: right bottom;
    background-repeat: no-repeat;
    background-size: contain;
    & > div {
      display: grid;
      gap: 40px 32px;
      @media (width >= 1280px) {
        grid-template-columns: 1fr 1fr;
      }
    }
  }

  h2 {
    font-size: 24px;
    line-height: 1;
    margin-bottom: 40px;
    @media (width >= 540px) {
      font-size: 28px;
    }
  }

  article div {
    align-items: center;
    display: flex;
    gap: 16px;
    padding: 4px 8px 0;
  }

  h3 {
    color: var(--primary-color);
    flex-grow: 1;
    font-weight: 600;
    @media (width >= 540px) {
      font-size: 20px;
    }
  }

  img {
    border-radius: 8px;
    width: 100%;
  }

  svg {
    height: 20px;
  }
</style>
